<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.jobby.Controller.PositionDescController">
    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="70.0" spacing="10.0" style="-fx-background-color: #0D214F;">
            <children>
                <Button style="-fx-background-color: transparent; -fx-padding: 20 0 0 0;">
                    <graphic>
                        <Label style="-fx-font-size:28px; -fx-text-fill:white;" text="â‰¡" />
                    </graphic>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="gearButton" style="-fx-background-color: transparent; -fx-padding: 0 0 20 0;">
                    <graphic>
                        <ImageView fitHeight="40" fitWidth="40">
                            <image>
                                <Image url="@icons8-settings-64 (1).png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="22.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="25" />
            </padding>
            <children>
                <!-- Logo and Header -->
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <ImageView fitHeight="110" fitWidth="110">
                            <image>
                                <Image url="@White LOGO.png" />
                            </image>
                        </ImageView>
                        <VBox alignment="CENTER_LEFT" spacing="2.0">
                            <children>
                                <Label style="-fx-font-size:48px; -fx-font-weight:bold; -fx-text-fill:#0D214F;" text="JOBBY" />
                                <Label style="-fx-font-size:18px; -fx-font-weight:bold; -fx-text-fill:#0D214F;" text="HIRE SMARTER" />
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <!-- Title -->
                <Label style="-fx-font-size:40px; -fx-font-family: 'Arial Black', Arial; -fx-font-weight:bold; -fx-text-fill:#0D214F;" text="Position Description" />

                <!-- Form fields -->
                <GridPane hgap="26.0" vgap="26.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="140" />
                        <ColumnConstraints minWidth="360" />
                        <ColumnConstraints minWidth="160" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="40" />
                        <RowConstraints minHeight="40" />
                        <RowConstraints minHeight="100" />
                    </rowConstraints>
                    <children>
                        <!-- Enter a Position -->
                        <Label style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#0D214F;"
                               text="Enter a Position:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="positionField" prefHeight="48.0" promptText=""
                                   style="-fx-font-size:18px; -fx-background-radius:20; -fx-background-color:#ededed;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <ComboBox fx:id="workingModeCombo" prefHeight="48.0" prefWidth="210.0"
                                  promptText="Working Mode" style="-fx-font-size:16px; -fx-font-weight:bold; -fx-background-radius:20; -fx-background-color:#ededed;"
                                  GridPane.columnIndex="2" GridPane.rowIndex="0" />

                        <!-- Enter Salary Range -->
                    <Label style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#0D214F;"
                           text="Enter Salary Range:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <HBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <children>

                    <TextField fx:id="minSalaryField" promptText="Min"
                                   style="-fx-font-size:18px; -fx-background-radius:20; -fx-background-color:#ededed;"
                                   prefWidth="110"/>
                        <Label text=" - " style="-fx-font-size:16px;"/>
                        <TextField fx:id="maxSalaryField" promptText="Max"
                                   style="-fx-font-size:18px; -fx-background-radius:20; -fx-background-color:#ededed;"
                                   prefWidth="110"/>
                    </children>
                    </HBox>

                        <!-- Enter Description -->
                        <Label style="-fx-font-size:22px; -fx-font-weight:bold; -fx-text-fill:#0D214F;"
                               text="Enter Description:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextArea fx:id="descriptionArea" prefHeight="170.0" prefWidth="580.0"
                                  promptText="Write Here ....." style="-fx-font-size:17px; -fx-background-radius:20; -fx-background-color:#ededed;" wrapText="true"
                                  GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
                    </children>
                </GridPane>

                <!-- Buttons -->
                <HBox alignment="CENTER" spacing="38.0">
                    <Button fx:id="updateButton" style="-fx-background-radius:20; -fx-font-size:18px; -fx-font-weight:bold; -fx-pref-width:120;" text="Update" />
                    <Button fx:id="saveButton" style="-fx-background-radius:20; -fx-font-size:18px; -fx-font-weight:bold; -fx-pref-width:120;" text="Save" />
                    <Button fx:id="deleteBtn" style="-fx-background-radius:20; -fx-font-size:18px; -fx-font-weight:bold; -fx-pref-width:120;" text="Delete" onAction= "#handleDelete" />
                </HBox>

            </children>
        </VBox>
    </center>
    <bottom>
        <AnchorPane prefHeight="70.0">
            <Button fx:id="backButton"
                    style="-fx-background-color: transparent;"
                    AnchorPane.rightAnchor="25"
                    AnchorPane.bottomAnchor="15"
                    onAction="#GoBack">
                <graphic>
                    <ImageView fitHeight="40" fitWidth="40">
                        <image>
                            <Image url="@Back.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </AnchorPane>
    </bottom>

</BorderPane>
