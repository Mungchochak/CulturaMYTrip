<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.lang.String?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="350">
    <children>

        <Label layoutX="20" layoutY="20" text="Position Description" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <GridPane layoutX="20" layoutY="50" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="120"/>
                <ColumnConstraints prefWidth="180"/>
                <ColumnConstraints prefWidth="100"/>
                <ColumnConstraints prefWidth="120"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints prefHeight="30"/>
                <RowConstraints prefHeight="100"/>
            </rowConstraints>

            <!-- Row 1: Position and Type -->
            <Label text="Enter a Position:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="positionField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <ComboBox fx:id="positionTypeBox" GridPane.rowIndex="0" GridPane.columnIndex="2">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Intern"/>
                        <String fx:value="Full-Time"/>
                    </FXCollections>
                </items>
            </ComboBox>

            <!-- Row 2: Description -->
            <Label text="Enter Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionArea" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3"
                      prefRowCount="4" prefWidth="500"/>
        </GridPane>

        <!-- Buttons -->
        <HBox layoutX="20" layoutY="200" spacing="15">
            <Button text="Update" fx:id="updateButton"/>
            <Button text="Save" fx:id="saveButton"/>
            <Button text="Delete" fx:id="deleteButton"/>
        </HBox>

    </children>
</AnchorPane>
