<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650" prefWidth="1100" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.jobby.Controller.DeletePositionController">
    <!-- Sidebar -->
    <VBox alignment="TOP_LEFT" prefWidth="75.0" spacing="10" style="-fx-background-color: #0C1B3A;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
        <children>
            <Button prefHeight="40" prefWidth="60" style="-fx-background-color: transparent;">
                <graphic>
                    <Label style="-fx-font-size: 32px; -fx-text-fill: white;" text="â‰¡" />
                </graphic>
            </Button>
            <Region VBox.vgrow="ALWAYS" />
            <ImageView fx:id="gearIcon" fitHeight="36" fitWidth="36" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@icons8-settings-64 (1).png" />
                </image>
            </ImageView>
        </children>
        <padding>
            <Insets bottom="15" left="10" right="10" top="20" />
        </padding>
    </VBox>
    <!-- Main content area -->
    <VBox alignment="TOP_LEFT" spacing="18" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="95" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <children>
            <!-- Logo & Title -->
            <HBox alignment="CENTER_LEFT" spacing="16">
                <children>
                    <ImageView fitHeight="100" fitWidth="100" preserveRatio="true">
                        <image>
                            <Image url="@White LOGO.png" />
                        </image>
                    </ImageView>
                    <VBox alignment="CENTER_LEFT" spacing="2">
                        <children>
                            <Label style="-fx-font-size: 40px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold; -fx-text-fill: #0C1B3A;" text="JOBBY" />
                            <Label style="-fx-font-size: 16px; -fx-text-fill: #0C1B3A;" text="HIRE SMARTER" />
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets bottom="0" left="20" right="0" top="24" />
                </padding>
            </HBox>
            <!-- Title -->
            <Label alignment="CENTER" style="-fx-font-size: 38px; -fx-font-family: 'Arial Black'; -fx-font-weight: bold; -fx-text-fill: #0C1B3A;" text="Delete Position" />
            <!-- Position Selection Form -->
            <HBox alignment="CENTER" spacing="20">
                <children>
                    <Label style="-fx-font-size: 22px;" text="Choose a Position:" />
                    <VBox spacing="16" style="-fx-background-color: #ededed; -fx-background-radius: 22;">
                        <padding>
                            <Insets bottom="24" left="24" right="24" top="24" />
                        </padding>
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="14">
                                <CheckBox fx:id="cbJuniorSE" />
                                <Label style="-fx-font-size: 19px;" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="14">
                                <CheckBox fx:id="cbITManager" />
                                <Label style="-fx-font-size: 19px;" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="14">
                                <CheckBox fx:id="cbDataScientist" />
                                <Label style="-fx-font-size: 19px;" />
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="14">
                                <CheckBox fx:id="cbQualityManager" />
                                <Label style="-fx-font-size: 19px;" />
                            </HBox>
                        </children>
                    </VBox>
                </children>
            </HBox>
            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="32">
                <children>
                    <Button fx:id="updateBtn" prefHeight="42" prefWidth="110" style="-fx-background-color: #6B83B7; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20;" text="Update" />
                    <Button fx:id="saveBtn" prefHeight="42" prefWidth="110" style="-fx-background-color: #1FC569; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20;" text="Save" />
                    <Button fx:id="deleteBtn" prefHeight="42" prefWidth="110" style="-fx-background-color: #E34234; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20;" text="Delete" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="0" left="30" right="0" top="30" />
        </padding>
    </VBox>
    <Button fx:id="backButton"
            style="-fx-background-color: transparent;"
            AnchorPane.rightAnchor="25" AnchorPane.bottomAnchor="20"
            onAction="#GoBack">
        <graphic>
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@Back.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
