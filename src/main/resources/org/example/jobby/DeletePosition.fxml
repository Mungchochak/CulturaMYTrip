<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ScrollPane?>
<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.jobby.Controller.DeletePositionController">

    <!-- Sidebar -->
    <VBox alignment="TOP_LEFT" prefWidth="75.0" spacing="10" style="-fx-background-color: #0C1B3A;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
        <children>
            <Button prefHeight="40" prefWidth="60" style="-fx-background-color: transparent;">
                <graphic>
                    <Label style="-fx-font-size: 2em; -fx-text-fill: white;" text="â‰¡" />
                </graphic>
            </Button>
            <Region VBox.vgrow="ALWAYS" />
            <ImageView fitHeight="36" fitWidth="36" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@icons8-settings-64 (1).png" />
                </image>
            </ImageView>
        </children>
        <padding>
            <Insets bottom="15" left="10" right="10" top="20" />
        </padding>
    </VBox>

    <!-- Main Content Responsive -->
    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="95" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                    <ImageView fitHeight="110.0" fitWidth="110.0" preserveRatio="true">
                        <image>
                            <Image url="@White LOGO.png" />
                        </image>
                    </ImageView>
                    <VBox alignment="CENTER_LEFT" prefHeight="130.0" prefWidth="350.0" spacing="5">
                        <children>
                            <Label prefHeight="70.0" prefWidth="299.0" style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: #0D214F;" styleClass="title-label" text="JOBBY" />
                            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #0D214F;" styleClass="subtitle-label" text="HIRE SMARTER" />
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets left="15.0" top="10" />
                </padding>
            </HBox>

            <!-- Title -->
            <Label style="-fx-text-fill: #0D214F;" styleClass="main-title" text="Delete Position" />

            <!-- Centered Card -->
            <StackPane alignment="CENTER" maxWidth="700" minWidth="350">
                <VBox alignment="TOP_CENTER" maxWidth="650" minWidth="320" spacing="15.0" styleClass="card-box">
                    <padding>
                        <Insets bottom="20" left="25.0" right="25.0" top="20" />
                    </padding>
                    <children>
                        <Label style="-fx-text-fill: #0D214F;" styleClass="card-title" text="Choose a Position to Delete:" />
                        <ScrollPane fitToWidth="true" prefHeight="240" maxHeight="240" style="-fx-background-radius: 18;">
                            <content>
                                <VBox fx:id="positionsVBox" spacing="10" />
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>
            </StackPane>

            <!-- Delete Button -->
            <HBox alignment="CENTER" style="-fx-padding: 2.5em 0 0 0;">
                <Button fx:id="deleteBtn" onAction="#handleDelete" styleClass="big-delete-btn" text="Delete" />
            </HBox>
        </children>
        <padding>
            <Insets bottom="0" left="0" right="0" top="20" />
        </padding>
    </VBox>

    <Button fx:id="backButton" onAction="#GoBack" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="25">
        <graphic>
            <ImageView fitHeight="40.0" fitWidth="40.0">
                <image>
                    <Image url="@Back.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
